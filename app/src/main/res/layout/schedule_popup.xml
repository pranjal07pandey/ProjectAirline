<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="5dp"
    android:layout_gravity="center">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linear1"
        android:layout_marginLeft="20dp"



        >

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/Titlehome"
            android:textSize="20sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:text="id : "

            />

        <TextView
            android:id="@+id/flightId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="15dp"
            android:text="1"
            android:textAlignment="center"
            android:maxLength="10"
            android:ellipsize="marquee"
            android:textColor="@color/Titlehome"
            android:textSize="20sp"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linear2"
        android:layout_marginLeft="20dp">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/Titlehome"
            android:textSize="20sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:text="eta : "


            />

        <TextView
            android:id="@+id/flightEta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="15dp"
            android:text="2019-1-2"
            android:textAlignment="center"
            android:maxLength="20"
            android:ellipsize="marquee"
            android:textColor="@color/Titlehome"
            android:textSize="20sp"

            />

    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linear3"
        android:layout_marginLeft="20dp">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/Titlehome"
            android:textSize="20sp"
            android:textAllCaps="true"
            android:textStyle="bold"

            android:layout_marginTop="15dp"

            android:text="etd : "

            />

        <TextView
            android:id="@+id/flightEtd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="15dp"
            android:text="2019-1-2"
            android:textAlignment="center"
            android:maxLength="10"
            android:ellipsize="marquee"
            android:textColor="@color/Titlehome"
            android:textSize="20sp"

            />

    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linear5"
        android:layout_marginLeft="20dp">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/Titlehome"
            android:textSize="20sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:text="remarks : "

            />

        <TextView
            android:id="@+id/captainCrew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="15dp"
            android:text="ola"
            android:textAlignment="center"
            android:maxLength="10"
            android:ellipsize="marquee"
            android:textColor="@color/Titlehome"
            android:textSize="20sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linear6"
        android:layout_marginLeft="20dp">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/Titlehome"
            android:textSize="20sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:text="captain crew : "

            />

        <TextView
            android:id="@+id/cabinCrew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="15dp"
            android:text="ola"
            android:textAlignment="center"
            android:maxLength="10"
            android:ellipsize="marquee"
            android:textColor="@color/Titlehome"
            android:textSize="20sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linear4"
        android:layout_marginLeft="20dp">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/Titlehome"
            android:textSize="20sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:text="cabin crew : "

            />

        <TextView
            android:id="@+id/flightRemarks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="15dp"
            android:text="ola"
            android:textAlignment="center"
            android:maxLength="10"
            android:ellipsize="marquee"
            android:textColor="@color/Titlehome"
            android:textSize="20sp"
            />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        >

        <Button
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:background="@drawable/buttondesign"
            android:layout_centerHorizontal="true"
            android:id="@+id/buttonOk"
            android:text="OK"
            android:layout_marginTop="7dp"
            android:textColor="#ffff"
            android:textSize="20sp"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:gravity="center"
            />




    </RelativeLayout>


</LinearLayout>